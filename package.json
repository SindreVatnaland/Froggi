{
	"name": "froggi",
	"version": "0.7.2",
	"private": true,
	"description": "Slippi Client",
	"main": "build_electron/electron/main.js",
	"nodeIntegration": true,
	"author": "Sindre Vatnaland",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev && nodemon",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
		"dev:svelte": "cd frontend && npm run dev",
		"dev:electron": "npm run compile:electron && electron build_electron/electron/main.js",
		"dev:electron:inspect": "npm run compile:electron && electron --inspect=9229 --remote-debugging-port=9222 build_electron/electron/main.js",
		"build:svelte": "cd frontend && npm run build",
		"build": "run-script-os",
		"build:linux": "npm run compile && electron-builder -l --config build.config.json",
		"build:darwin": "npm run compile && electron-builder -m --config build.config.json",
		"build:win32": "npm run compile && electron-builder -w --config build.config.json",
		"compile": "npm run build:svelte && npm run compile:electron && tsc --p ./electron/tsconfig.json",
		"compile:electron": "npm run && tsc --p ./electron/tsconfig.json && npm run overlay:copy",
		"install:all": "npm i --legacy-peer-deps && npm i --legacy-peer-deps --prefix ./frontend",
		"test": "npm run compile:electron && npm run test:copy && jest",
		"test:copy": "shx mkdir -p ./build_electron/test/sample-games/ && shx cp -r ./test/sample-games/* ./build_electron/test/sample-games/",
		"overlay:copy": "shx mkdir -p ./build_electron/electron/demo-overlays && shx cp -r ./demo-overlays/* ./build_electron/electron/demo-overlays"
	},
	"engines": {
		"npm": ">=7",
		"yarn": "use npm - https://github.com/FractalHQ/sveltekit-electron/issues/12#issuecomment-1068399385"
	},
	"browserslist": [
		"Chrome 89"
	],
	"dependencies": {
		"@slippi/slippi-js": "github:SindreVatnaland/slippi-js#dist",
		"@types/lodash": "^4.14.202",
		"appdata-path": "^1.0.0",
		"axios": "^1.6.5",
		"cors": "^2.8.5",
		"discord-rpc": "^4.0.1",
		"dolphin-memory-reader": "^0.6.7",
		"electron-context-menu": "^3.6.1",
		"electron-log": "^4.4.8",
		"electron-packager": "^18.3.6",
		"electron-reloader": "^1.2.3",
		"electron-serve": "^1.3.0",
		"electron-store": "^8.1.0",
		"electron-updater": "^6.3.9",
		"electron-window-state": "^5.0.3",
		"eventemitter2": "^6.4.9",
		"events": "^3.3.0",
		"express": "^4.18.2",
		"find-process": "^1.4.7",
		"got": "^12.6.1",
		"ip": "^1.1.8",
		"lodash": "^4.17.21",
		"node-fetch": "^3.3.2",
		"nodemon": "^2.0.22",
		"obs-websocket-js": "^5.0.4",
		"reflect-metadata": "^0.1.14",
		"run-script-os": "^1.1.6",
		"tsyringe": "^4.8.0",
		"typed-emitter": "^2.1.0",
		"ws": "^8.16.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/discord-rpc": "^4.0.8",
		"@types/express": "^5.0.0",
		"@types/ip": "^1.1.3",
		"@types/jest": "^29.5.11",
		"@types/npm": "^7.19.3",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^8.8.1",
		"@typescript-eslint/parser": "^8.8.1",
		"autoprefixer": "^10.4.17",
		"concurrently": "9.0.1",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.0",
		"electron": "^32.2.0",
		"electron-builder": "^25.1.8",
		"electron-connect": "^0.6.3",
		"electron-packager": "^17.1.2",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"jest": "^29.7.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"sass": "^1.70.0",
		"shx": "^0.3.4",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"typescript": "^5.6.3"
	},
	"build": {
		"build": {
			"files": [
				"build/**/*"
			]
		},
		"publish": {
			"provider": "github",
			"owner": "slprank",
			"repo": "Froggi-Launcher"
		}
	}
}
