{
	"name": "froggi",
	"version": "0.4.6",
	"private": true,
	"description": "Slippi Client",
	"main": "build_electron/electron/main.js",
	"nodeIntegration": true,
	"author": "Sindre Vatnaland",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev && nodemon",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
		"dev:svelte": "cd frontend && npm run dev",
		"dev:electron": "npm run compile:electron && electron build_electron/electron/main.js",
		"build:svelte": "cd frontend && npm run build",
		"build:linux": "npm run compile && electron-builder -l --config build.config.json",
		"build:mac": "npm run compile && electron-builder -m --config build.config.json",
		"build:win": "npm run compile && electron-builder -w --config build.config.json",
		"compile": "npm run build:svelte && npm run compile:electron && tsc --p ./electron/tsconfig.json",
		"compile:electron": "npm run && tsc --p ./electron/tsconfig.json",
		"install:all": "npm i && npm i --prefix ./frontend",
		"test": "npm run compile:electron && npm run test:copy && jest",
		"test:copy": "mkdir -p ./build_electron/test/sample-games/ && cp -rv ./test/sample-games/* ./build_electron/test/sample-games/"
	},
	"engines": {
		"npm": ">=7",
		"yarn": "use npm - https://github.com/FractalHQ/sveltekit-electron/issues/12#issuecomment-1068399385"
	},
	"browserslist": [
		"Chrome 89"
	],
	"dependencies": {
		"@slippi/slippi-js": "^6.7.0",
		"@types/lodash": "^4.14.201",
		"appdata-path": "^1.0.0",
		"axios": "^1.6.2",
		"cors": "^2.8.5",
		"discord-rpc": "^4.0.1",
		"dolphin-memory-reader": "^0.6.1",
		"electron-context-menu": "^3.6.1",
		"electron-log": "^4.4.8",
		"electron-reloader": "^1.2.3",
		"electron-serve": "^1.2.0",
		"electron-store": "^8.1.0",
		"electron-updater": "^5.3.0",
		"electron-window-state": "^5.0.3",
		"eventemitter2": "^6.4.9",
		"events": "^3.3.0",
		"express": "^4.18.2",
		"find-process": "^1.4.7",
		"got": "^12.6.1",
		"ip": "^1.1.8",
		"lodash": "^4.17.21",
		"nodemon": "^2.0.22",
		"obs-websocket-js": "^5.0.3",
		"reflect-metadata": "^0.1.13",
		"run-script-os": "^1.1.6",
		"tsyringe": "^4.8.0",
		"typed-emitter": "^2.1.0",
		"ws": "^8.15.1"
	},
	"devDependencies": {
		"@types/discord-rpc": "^4.0.8",
		"@types/ip": "^1.1.3",
		"@types/jest": "^29.5.8",
		"@types/npm": "^7.19.3",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"autoprefixer": "^10.4.16",
		"concurrently": "^7.6.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.3.1",
		"electron": "^22.3.27",
		"electron-builder": "^23.6.0",
		"electron-connect": "^0.6.3",
		"electron-packager": "^17.1.2",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^8.10.0",
		"jest": "^29.7.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"sass": "^1.69.5",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.2",
		"typescript": "^4.9.5"
	},
	"build": {
		"build": {
			"files": [
				"build/**/*"
			]
		},
		"publish": {
			"provider": "github",
			"owner": "slprank",
			"repo": "Froggi-Launcher"
		}
	}
}
