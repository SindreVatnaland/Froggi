{
	"appId": "com.Froggi.app",
	"productName": "Froggi",
	"directories": {
		"output": "dist"
	},
	"artifactName": "Froggi-${version}-${os}.${ext}",
	"win": {
		"icon": "bin/static/icon.png",
		"target": [
			{
				"target": "nsis",
				"arch": ["x64"]
			}
		]
	},
	"linux": {
		"icon": "bin/static/icon.png",
		"target": ["default"]
	},
	"mac": {
		"icon": "bin/static/icon.png",
		"target": ["default"],
		"extraResources": ["res", "favicon.png"]
	},
	"executableName": "Froggi",
	"files": [
		"build",
		"build_electron",
		"build/**/*",
		"build_electron/**/*",
		{
			"from": "build",
			"to": ""
		}
	],
	"exclude": ["build_electron/test"]
}
