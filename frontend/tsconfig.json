{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"types": ["vite/client", "node"],
		"lib": ["ESNext"],
		"isolatedModules": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": false,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"]
		}
	},
	"include": ["."],
	"exclude": [
		"postcss.config.cjs",
		"src/routes/+layout.js",
		"src/service-worker.js",
		"svelte.config.js",
		"vite.config.js"
	]
}
