{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "../build_electron",
		"paths": {},
		"baseUrl": "./",
		"target": "ES2020",
		"module": "commonjs",
		"skipLibCheck": true,
		"sourceMap": true,
		"stripInternal": true,
		"lib": ["es2015", "esnext", "dom"],
		"moduleResolution": "node",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true
	},
	"include": [
		".",
		"../test",
		"../frontend/src/lib/utils/gamePredicates.ts",
		"../demo-overlays",
		"../electron-overlay",
		"../public",
		"services/workers/websocketWorker.ts"
	],
	"exclude": ["node_modules"]
}
